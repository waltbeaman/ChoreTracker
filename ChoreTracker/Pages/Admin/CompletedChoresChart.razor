@using Models
<style>
    div {
        transition: all 1s linear;
    }

    .legend {
        display: flex !important;
        width: 100%;
        height: 10px;
    }

        .legend > section {
            width: 10%;
            height: 15px;
            border-right: 3px solid black;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

    section > span {
        margin-right: 3px;
    }
</style>
<div class="alert alert-dark col-8">
    <div class="alert alert-primary mb-4 border-dark">
        <div class="row">
            <h4 class="mb-0">@Title</h4>
            <select class="form-control border-dark" @bind="selectedMonth" @bind:event="oninput">
                @foreach (var item in Data.Keys.Reverse())
                {
                    <option>@item</option>
                }
            </select>
        </div>
    </div>
    <div>
        @foreach (var item in Data.Where(s => s.Key == selectedMonth).SelectMany(s => s.Value))
        {
            <div class="alert alert-primary p-1 border-dark" style="width: @(item.CompletedChores)%;">
                <b>@($"{item.UserName}: ")</b> @($"{item.CompletedChores}")
            </div>


        }
        <div class="legend">
            @for (int i = 1; i <= 10; i++)
            {
                <section>
                    <span>@(i * 10)</span>
                </section>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public Dictionary<string, List<CompletedChoreCount>> Data { get; set; }
    private string _selectedMonth;

    public string selectedMonth
    {
        get
        {
            if (_selectedMonth == null)
                return Data.Keys.Last();
            return _selectedMonth;
        }
        set { _selectedMonth = value; }
    }


}